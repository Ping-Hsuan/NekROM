      integer         max_rst
      common /crst_i/ max_rst            ! for full restart

      integer nxr,nyr,nzr,nelr,nelgr,istpr,ifiler,nfiler
     $       ,nxo,nyo,nzo,nrg
     $       ,wdsizr,wdsizo
     $       ,nfileo,nproc_o,nfldr
     $       ,er(lelr),nelB,nelBr

      common /cmfi_i/ nxr,nyr,nzr,nelr,nelgr,istpr,ifiler,nfiler
     $              , nxo,nyo,nzo,nrg
     $              , wdsizr,wdsizo
     $              , nfileo,nproc_o,nfldr
     $              , er,nelB,nelBr

      real timer
      common /cmfi_r/ timer

