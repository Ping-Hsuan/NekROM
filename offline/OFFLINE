      common /flds/ xyz(lxyz*ldim*lel),upt(lxyz*leb*lfld),
     $              buf(lxyz*leb*lfld)
     $              ga(lsg*lsl*lgld),gb(lsg*lsl*lgld),
     $              gc(lsg*lsg*lsl*lgld)

      real mass
      common /integ/ mass(lxyz*lel),visc(lxyz*lel),
     $               geom(lxyz*lel*(ldim-1)*3),rx(lxyzd*ldim*ldim*lel)

      common /ivec/ ieg(leb*lfld*4),indxr(lfld+1),
     $              ibuf(lxyz*leb*lfld)

      integer*8 ibuf8
      common /ivec8/ ibuf8(lxyz*leb*lfld)

      common /isca/ nel,nep,neg,nsl,nsg

      logical ifread
      common /lvec/ ifread(7+ldimt)

      character*132 fnames
      common /lchr/ fnames(lsg)

