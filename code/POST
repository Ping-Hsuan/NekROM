      include 'SIZE'
      include 'MOR'

c     parameter (lx1=8)
c     parameter (ldim=2)

      parameter (lxyz=lx1**ldim)
      parameter (lxyzd=lxd**ldim)
      parameter (lelp=lelt)

      parameter (lsg=ls)

c     parameter (lsg=100)
c     parameter (ls=lsg/lpmin+1)

      real mass
      common /integr/ mass(lxyz*lelp),visc(lxyz*lelp)
      common /geo/ gfac(lxyz*lelp,6),rxd(lxyzd*ldim*ldim*lelp)

      common /fvars/ uu(lxyz*lelp*ldim*ls),zz(lxyz*lelp*ldim*ls),
     $               tt(lxyz*lelp*ls)

      common /work/ wv1(lxyz*lelp*ldim),
     $              wvf1(lxyz*lelp*ldim*ls),wvf2(lxyz*lelp*ldim*ls),
     $              w9(lxyz*lelp*9)

      common /pod/ gram(ls*lsg),eevec(ls*lsg)
      common /ops/ aa(ls*lsg),bb(ls*lsg),cc(ls*lsg*lsg)

      common /ipparallel/ nps,npb
      common /pparallel/ nns(lsg),nnb(lb)

      common /scales/ zsc(lsg)
